@model Product
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />



@Html.ActionLink("Home","Index",null,new {@class="btn btn-info" }) 




<div class="form-group" style="width:500px">
    @using (Html.BeginForm("Insert", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="email"><strong>ProductName:</strong></label>
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="email"><strong>Description:</strong></label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="email"><strong>Price:</strong></label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="email"><strong>Stock:</strong></label>
            @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-success">Save</button>
    }

</div>

